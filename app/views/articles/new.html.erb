<div class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-between p-4"
  <h2 class="text-decoration-none btn"><%= link_to "Wikinimous ", articles_path, class: "text-decoration-none"%></h2>
  <%= link_to "Create a new Article", new_article_path,  class: "btn btn-outline-success"%>
</div>

<div class="container ">
  <div class="d-flex flex-column">
    <%= form_with model: @article do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :content %>
      <%= f.text_field :content %>
      <%= f.submit %>
    <% end %>
    <%= link_to "Go back", articles_path, class: "text-decoration-none" %>
  </div>
</div>
