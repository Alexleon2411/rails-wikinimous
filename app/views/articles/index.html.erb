
<div class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-between p-4 mb-2"
  <h2 class="btn"><%= link_to "Wikinimous ", articles_path, class: "text-decoration-none" %></h2>
  <%= link_to "Create a new Article", new_article_path,  class: "btn btn-outline-success"%>
</div>

<div class="container">
  <div class=" d-flex row">
    <% @articles.each do |article| %>
      <div>
        <h2><%= link_to article.title, article, class: "text-decoration-none" %></h2>
        <%= article.content[0..100] %>
      </div>
    <% end %>
  </div>
</div>
